# Port the server listens on (default: 3000)
PORT=3000

# Set to 'true' to disable JWT authentication (helpful for local development)
DISABLE_AUTH=true

# JWT secret used to verify tokens (only needed if auth is enabled)
# For development, any value works. In production, use a strong secret.
JWT_SECRET=my_dummy_jwt_secret

# URL of the external address validation API
# Leave blank or unset to use mock validation responses (good for learning)
# Example: VALIDATION_API_URL=https://api.example.com/validate
# VALIDATION_API_URL=
